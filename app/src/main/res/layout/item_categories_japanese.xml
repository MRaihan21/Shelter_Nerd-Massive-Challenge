<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white2"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_image_event_japanese"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tv_title_japanese1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Judul"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_image_event_japanese" />

        <TextView
            android:id="@+id/tv_price_japanese1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.5.000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_title_japanese1"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_japanese1" />



    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>