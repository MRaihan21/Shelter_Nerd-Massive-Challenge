<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white2"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iv_image_event"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tv_title_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:text="Judul"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_image_event" />

        <TextView
            android:id="@+id/tv_price_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.5.000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="@+id/tv_title_event"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_event" />

<!--        image 2-->

        <ImageView
            android:id="@+id/iv_image_event2"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iv_image_event"
            app:layout_constraintTop_toTopOf="parent"
            tools:background="@tools:sample/avatars" />


        <TextView
            android:id="@+id/tv_title_event2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_image_event2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/iv_image_event2"
            app:layout_constraintTop_toBottomOf="@+id/iv_image_event2" />

        <TextView
            android:id="@+id/tv_price_event2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp.5.000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_image_event2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/iv_image_event2"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_event" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>