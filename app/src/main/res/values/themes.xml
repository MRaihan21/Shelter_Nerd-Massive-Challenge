<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.XET" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="colorPrimary">@color/red2</item>
        <item name="fontFamily">@font/poppinsregular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="title">
        <item name="android:layout_margin">30dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="desc">
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="input" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox</item>
        <item name="boxCollapsedPaddingTop">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
    </style>

    <style name="button">
        <item name="backgroundTint">@color/red2</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="buttonGoggle" parent="Widget.Material3.Button.TextButton">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="strokeColor">@color/m3_button_outline_color_selector</item>
        <item name="strokeWidth">1dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginEnd">30dp</item>
    </style>

    <style name="codeOTP">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">10dp</item>
    </style>



    <style name="Theme.XET" parent="Base.Theme.XET" />

</resources>